{
  "name": "@jcubic/atm",
  "version": "0.0.1",
  "description": "ATM is Terminal Multiplexer",
  "module": "src/index.tsx",
  "type": "module",
  "bin": {
    "atm": "./bin/atm.cjs"
  },
  "files": [
    "bin",
    "src"
  ],
  "scripts": {
    "start": "bun run src/index.tsx",
    "dev": "bun run --watch src/index.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\""
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/figlet": "^1.7.0",
    "prettier": "^3.8.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@opentui/core": "^0.1.72",
    "@opentui/react": "^0.1.72",
    "bun": "^1.3.0",
    "figlet": "^1.9.4",
    "react": "^19.2.3"
  }
}
